{% extends '_modal.html.twig' %}

{% block class %}
    admin_edit_password
{% endblock %}

{% block modal %}
    {# Display form errors #}
    {% if errors is defined and errors %}
        <div class="form-errors">
            {% for error in errors %}
                <div class="form-error">
                    {{ error }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {{ form_start(form, {'action': path('user_edit_password')}) }}
        {{ form_widget(form) }}
        <input id="edit_password" type="submit" value="Ajouter">
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script defer type="text/javascript">
    </script>
{% endblock %}
