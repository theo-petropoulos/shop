{% extends 'base.html.twig' %}

{% block pretitle %}NOS MARQUES{% endblock %}

{% block body %}
    <main id="authors">
        <section id="trendings_container">

        </section>
        <section id="authors_container">
            {% if authors is not empty %}
                {% for author in authors %}
                    {% set image = (author.getLastProduct is not null and author.getLastProduct.getImages is not null) ? author.getLastProduct.getImages[0] : null %}
                    <a href="{{ (path('show_author', {id: author.id})) }}" id="{{ author.id }}_container" class="author_container navto_container"
                            {% if image is not null %}
                                style="background-image: url('{{ asset('images/products/' ~ author.id ~ '/' ~ image.name) }}')"
                            {% endif %}
                    >
                        <span>
                            <h2 class="navto">{{ author.name }}</h2>
                            <p>{{ author.description }}</p>
                        </span>
                    </a>
                {% endfor %}
            {% endif %}
        </section>
    </main>
{% endblock body %}

{% block javascripts %}
    {# Switch background script #}
    {{ encore_entry_script_tags('background_switcher') }}
{% endblock %}